{
  "name": "pixelprep-sharp-poc",
  "version": "0.1.0",
  "description": "Sharp.js proof-of-concept for PixelPrep Instagram preset",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "test": "node dist/test.js",
    "test:user-journey": "tsc && node dist/tests/user-journey.test.js",
    "test:bug-prevention": "tsc && node dist/tests/bug-prevention.test.js",
    "test:comprehensive": "tsc && node dist/tests/test-runner.js",
    "test:critical": "tsc && node dist/tests/test-runner.js --critical",
    "dev": "tsc && node dist/test.js"
  },
  "dependencies": {
    "sharp": "^0.33.4"
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "typescript": "^5.5.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}